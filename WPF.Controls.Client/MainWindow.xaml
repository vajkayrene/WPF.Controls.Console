<Window x:Class="WPF.Controls.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mvvm="http://www.galasoft.ch/mvvmlight"
        xmlns:local="clr-namespace:WPF.Controls.Client"
        xmlns:ctrl="clr-namespace:WPF.Controls.Console;assembly=WPF.Controls.Console"
        mc:Ignorable="d"
        Title="WPF Console Control" Width="800" Height="500">

    <Grid>
        <ctrl:ConsoleControl x:Name="MyConsoleControl" ExecuteCommand="{Binding ExecuteCommand}" 
                             WelcomeMessage="WPF Console 1.0.0 - Vajkay René (vajkay.rene@gmail.com)" 
                             CommandLinePrefix="Console" FontWeight="Bold" />
    </Grid>
</Window>
